<h1>New Post <h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :Body%>
      <%= f.text_area :body, class: 'form-control' %>

      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
